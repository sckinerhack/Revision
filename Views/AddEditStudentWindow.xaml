<Window x:Class="Revision.Views.AddEditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student" Height="420" Width="450" WindowStartupLocation="CenterOwner" 
        Background="White" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid Background="White">
        <DockPanel LastChildFill="False" Margin="30">
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="Enter Student Information" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,25"/>
                
                <TextBlock Text="Last Name (Nom):" FontSize="13" Foreground="#333333" Margin="0,0,0,8"/>
                <TextBox x:Name="NomTextBox" Height="40" Padding="12" FontSize="13" Margin="0,0,0,15" 
                         Background="White" BorderThickness="1" BorderBrush="#CCCCCC" />
                
                <TextBlock Text="First Name (Prenom):" FontSize="13" Foreground="#333333" Margin="0,0,0,8"/>
                <TextBox x:Name="PrenomTextBox" Height="40" Padding="12" FontSize="13" Margin="0,0,0,25"
                         Background="White" BorderThickness="1" BorderBrush="#CCCCCC"/>
            </StackPanel>
            
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                <Button x:Name="SaveButton" Content="Save" Width="120" Height="45" Margin="0,0,15,0"
                        Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="13" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="120" Height="45"
                        Background="#D0D0D0" Foreground="Black" FontWeight="Bold" FontSize="13" Click="CancelButton_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>

