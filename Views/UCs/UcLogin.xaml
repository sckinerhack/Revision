<UserControl x:Class="Revision.Views.UCs.UcLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Revision.Views.UCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Login" FontSize="28" FontWeight="Bold" Foreground="#333333" TextAlignment="Center" Margin="0,0,0,30"/>
            
            <TextBlock Text="Username" FontSize="14" Foreground="#333333" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     Height="40" Padding="10" FontSize="14" Margin="0,0,0,15" 
                     Background="White" BorderThickness="1" BorderBrush="#CCCCCC"/>
            
            <TextBlock Text="Password" FontSize="14" Foreground="#333333" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="40" Padding="10" FontSize="14" Margin="0,0,0,20"
                         Background="White" BorderThickness="1" BorderBrush="#CCCCCC"
                         PasswordChanged="PasswordBox_PasswordChanged"/>
            
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontSize="12" Margin="0,0,0,15" TextWrapping="Wrap"/>
            
            <Button Content="Login" Command="{Binding LoginCommand}" Height="45" FontSize="16" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
            
            <TextBlock Text="Demo: admin / admin" FontSize="11" Foreground="#999999" TextAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>

