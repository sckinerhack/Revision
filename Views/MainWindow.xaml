<Window x:Class="Revision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Revision"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="181*"/>
        </Grid.RowDefinitions>
        <Button Content="Gestion Etudiant"
                Command="{Binding GestionEtudiantCommand}"
                HorizontalAlignment="Left" Margin="32,5,0,0" VerticalAlignment="Top" Height="52" Width="190"/>
        <Button Content="Gestion Professeur"
                Command="{Binding GestionProfCommand}"
                HorizontalAlignment="Left" Margin="254,3,0,0" VerticalAlignment="Top" Height="62" Width="212"/>
        <Button Content="Logout" Command="{Binding LogoutCommand}" Margin="704,31,10,0" VerticalAlignment="Top" Height="26"/>
        <Grid x:Name="GrContent" Grid.Row="1"/>

    </Grid>
</Window>

